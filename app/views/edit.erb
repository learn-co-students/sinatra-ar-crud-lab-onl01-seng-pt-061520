<h2> <%=@article.title%> </h2>
<p><%= @article.content%></p>

<form action="/articles/<%= @article.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="PATCH">
    New Title: <input type="text" name="title">
    New Content: <input type="text" name="content">
    <input type="submit" id="Submit">
</form>